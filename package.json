    "koa-favicon": "^2.1.0",
    "koa-mount": "^4.0.0",
    "koa-static": "^5.0.0",
    "ioredis": "^5.8.2",
    "lodash": "^4.17.21",
    "long": "^4.0.0",
    "mediasoup": "~3.13.24",
    "module-alias": "^2.2.2",
    "node-fetch": "^2.7.0",
    "pm2": "^5.1.2",
    "protobufjs": "^6.11.4",
    "socket.io": "^4.7.5",
    "statuses": "^2.0.1",
    "urlcat-fork": "^2.0.5"
